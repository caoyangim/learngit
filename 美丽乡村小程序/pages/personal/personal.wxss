page{
	height: 100%;
}

.container_my {
    display: block;
    height: 100%;
    background-color: #F2f2f2;
}

.usermessa{
  margin: 25rpx;
  display: flex;
  line-height: 56rpx;
  flex-direction: column;
  font-family: STXihei;
  color: #2F4F4F;
  font-size: 36rpx
}

.userinfo {
    display: flex;
    padding: 40rpx 0;
    justify-content:left;
    background: #69C3AA;
}

.userinfo-avatar {
    width: 180rpx;
    height: 180rpx;
    margin-left: 50rpx;
    margin-top: 25rpx;
    margin-bottom: 25rpx;
    border-radius: 50%;
    display: block;
    overflow: hidden;
}

.userinfo-nickname {
    color: #F2f2f2;
}

.weui_cell {
    position: relative;
    display: flex;
    padding: 15px;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    border-bottom: 1px solid #dadada;
    background-color: white;
}

.weui_cell_hd image {
    width: 100%;
    height: 20px;
    vertical-align: -2px;
}

.tv_cell_left {
    position: absolute;
    font-size: 30rpx;
    color: #333;
    left: 20rpx;
}

.tv_cell_right {
    position: absolute;
    font-size: 28rpx;
    color: #999999;
    right: 50rpx;
}

.iv-arrow {
    position: absolute;
    right: 30rpx;
    border-top: 2rpx solid #c7c7c7;
    border-right: 2rpx solid #c7c7c7;
    width: 16rpx;
    height: 16rpx;
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
}

.v_below {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.tv_server_time {
    font-size: 28rpx;
    color: #999999;
    margin-top: 20rpx;
}