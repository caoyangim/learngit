/**index.wxss**/
@import "../wxSearchView/wxSearchView.wxss";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.menu_container {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.menu_item {
    width: 25%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    box-sizing: border-box;
    padding-bottom: 10px;
    padding-top: 10px;
}
.menu_icon {
    width: 40px;
    height: 40px;
    margin-bottom: 5px;
    border-radius: 20px;
}
.swiper {
  margin-bottom: 20px;
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}

/** 搜索框 **/
.weui-search-bar__form {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: auto;
  flex: auto;
  border-radius: 5px;
  background: #fff;
  border: 1rpx solid #e6e6ea;
  margin-top: 10px;
  margin-bottom: 10px;
  margin-left: 10px;
  margin-right: 2px
}

.ico_per{
  margin-top: 11px;
  margin-right: 10px;
  width: 25px;
  height: 25px
}